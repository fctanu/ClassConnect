{
    "version": 2,
    "outputDirectory": "frontend/dist",
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 3 * * *"
        }
    ]
}